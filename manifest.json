{
  "manifest_version": 3,
  "name": "Auto Pause YouTube",
  "version": "1.1",
  "description": "Automatically pauses YouTube videos when the tab is hidden and resumes when visible.",
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "icons": {}
}